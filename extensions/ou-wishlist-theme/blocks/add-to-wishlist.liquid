{% comment %}
  OU Wishlist - Add to wishlist block
  Place on product pages near the buy buttons.
{% endcomment %}

<div
  class="ou-wishlist"
  data-proxy-base="{{ block.settings.proxy_base }}"
  data-product-id="{{ product.id }}"
>
  <div type="button" class="ou-wishlist__btn button button--{{ block.settings.button_style }}">
    <span>{{ block.settings.button_label }}</span>
  </div>

  <div class="ou-wishlist__modal" hidden>
    <div class="ou-wishlist__backdrop"><s></s></div>

    <div class="ou-wishlist__panel" role="dialog" aria-modal="true">
      <div class="ou-wishlist__header">
        <strong>{{ block.settings.modal_title }}</strong>
        <button type="button" class="ou-wishlist__close">Ã—</button>
      </div>

      <div class="ou-wishlist__body">
        <div class="ou-wishlist__row">
          <label>Choose wishlist</label>
          <select class="ou-wishlist__select"></select>
        </div>

        <div class="ou-wishlist__row">
          <label>Create new</label>
          <input class="ou-wishlist__new" type="text" placeholder="New wishlist name" />
          <div type="button" class="ou-wishlist__create button button--secondary">Create</div>
        </div>

        <div class="ou-wishlist__row">
          <div type="button" class="ou-wishlist__add button button--primary">Add selected variant</div>

        </div>

        <div class="ou-wishlist__status" aria-live="polite"></div>

        <div class="ou-wishlist__login" hidden>
          <a href="{{ routes.account_login_url }}">Log in to use wishlists</a>
        </div>
      </div>
    </div>
  </div>
</div>

{{ 'ou-wishlist.css' | asset_url | stylesheet_tag }}
<script src="{{ 'ou-wishlist.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Add to wishlist",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Add to wishlist"
    },
    {
      "type": "text",
      "id": "modal_title",
      "label": "Modal title",
      "default": "Add to wishlist"
    },
    {
  "type": "select",
  "id": "button_style",
  "label": "Button style",
  "default": "primary",
  "options": [
    {
      "value": "primary",
      "label": "Primary"
    },
    {
      "value": "secondary",
      "label": "Secondary"
    },
    {
      "value": "tertiary",
      "label": "Tertiary"
    }
  ]
}
  ]
}
{% endschema %}
